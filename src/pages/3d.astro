---
import ArtPage from "../layouts/ArtPage.astro";
import Footer from "src/components/Footer.astro";
import { Image } from "astro:assets";

import sewingFrontView from "src/images/threed/sewing_1.png";
import sewingDesignTexture from "@assets/threed/sewing_4.png";
import sewingBottomPlate from "@assets/threed/sewing_3.png";
import sewingBackView from "@assets/threed/sewing_2.png";
import mechaMainSideView from "@assets/threed/mech_render_1.jpg";
import mechaLegsCloseUp from "@assets/threed/mech_render_3.jpg";
import mechaHead from "@assets/threed/mech_render_2.jpg";
import mechaBackView from "@assets/threed/mech_render_4.jpg";
import detectiveCloseUp from "@assets/threed/detective_1.jpg";
import detectiveRadioMaps from "@assets/threed/detective_2.jpg";
import detectiveRadio from "@assets/threed/detective_3.jpg";
import detectiveRevolver from "@assets/threed/detective_5.jpg";
import tracerGun from "@assets/threed/tracerGun_final_1.jpg";
import tracerGunWire from "@assets/threed/tracerGun_final_3.jpg";
import tracerGunOcc from "@assets/threed/tracerGun_final_2.jpg";
import monsterSketch from "@assets/threed/monster_sketch.png";
import monsterRender from "@assets/threed/monster_2.png";
import candleHolder from "@assets/threed/p_candle_holder.png";
import highChair from "@assets/threed/p_high_chair.png";
import oniMask from "@assets/threed/oni_omen_3.png";
---

<div>
  <ArtPage>
    <main class="text-jade-50 w-screen flex flex-col items-center">
      <!-- Description -->
      <div class="w-screen max-w-5xl min-w-[265px]">
        <span class="flex flex-col p-4 py-24 items-center max-w-5xl">
          <h1 class="font-bold text-6xl pb-8 self-center">3D Art</h1>
          <ul class="list-disc list-inside text-xl max-w-lg self-center">
            <li>Realistic texturing and materials</li>
            <li>Focus on hard surface modelling</li>
            <li>
              Softwares: blender, unreal engine, substance painter, unreal,
              photoshop, illustrator
            </li>
          </ul>
        </span>
      </div>
      <!-- Sewing Machine -->
      <div class="w-screen max-w-5xl min-w-[265px] bg-neutral-800">
        <span class="flex flex-col p-4 pt-24 items-center max-w-5xl">
          <h1 class="font-bold text-6xl pb-6">Sewing Machine</h1>
          <p class="max-w-lg self-center">
            A halloween challenge turned into a full project ^^
          </p>
        </span>
        <span
          class="flex flex-col p-4 md:p-20 items-center max-w-5xl bg-neutral-800"
        >
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pb-3">
            <Image
              class="col-span-1"
              src={sewingFrontView}
              alt={"Front view"}
            />
            <Image
              class="col-span-1"
              src={sewingDesignTexture}
              alt={"Close up of intricate design textured with alphas made in illustrator and textured in substance painter"}
            />
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pb-3">
            <Image
              class="flex-1"
              src={sewingBottomPlate}
              alt={"Bottom plate shot showing wear and tear from use and age"}
            />
            <Image class="flex-1" src={sewingBackView} alt={"Back view"} />
          </div>
        </span>
      </div>
      <!-- Mecha -->
      <div class="w-screen max-w-5xl min-w-[265px] bg-neutral-800">
        <span class="flex flex-col p-4 pt-24 items-center max-w-5xl">
          <h1 class="font-bold text-6xl pb-6">Sci-Fi Mecha</h1>
          <p class="max-w-lg self-center">
            An aspiration turned into milestone project.
          </p>
          <a class="underline" href="https://www.artstation.com/artwork/oVx6L">
            reference art by Heng Z</a
          >
        </span>
        <span
          class="flex flex-col p-4 md:p-20 items-center max-w-5xl bg-neutral-800"
        >
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pb-3">
            <Image
              class="col-span-1"
              src={mechaMainSideView}
              alt={"Main side view of mecha"}
            />
            <Image
              class="col-span-1"
              src={mechaLegsCloseUp}
              alt={"Closer-up on legs"}
            />
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pb-3">
            <Image
              class="flex-1"
              src={mechaHead}
              alt={"Zooming in on the head"}
            />
            <Image class="flex-1" src={mechaBackView} alt={"Back view"} />
          </div>
        </span>
      </div>
      <!-- Detective -->
      <div class="w-screen max-w-5xl min-w-[265px] bg-neutral-800">
        <span class="flex flex-col p-4 pt-24 items-center max-w-5xl">
          <h1 class="font-bold text-6xl pb-6">Detective's Desk</h1>
          <p class="max-w-lg self-center">
            Small scene rendered in Unreal Engine
          </p>
        </span>
        <span
          class="flex flex-col p-4 md:p-20 items-center max-w-5xl bg-neutral-800"
        >
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pb-3">
            <Image
              class="col-span-1"
              src={detectiveCloseUp}
              alt={"Detective's desk close up showing revolver, hoister, empty coffee cans, hand-held radio, and some papers"}
            />
            <Image
              class="col-span-1"
              src={detectiveRadioMaps}
              alt={"Hand-held radio normal map, occulusion map, and wireframe"}
            />
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pb-3">
            <Image
              class="flex-1"
              src={detectiveRadio}
              alt={"Hand-held radio front and back"}
            />
            <Image
              class="flex-1"
              src={detectiveRevolver}
              alt={"Revolver renders"}
            />
          </div>
        </span>
      </div>
      <!-- Tracer -->
      <div class="w-screen max-w-5xl min-w-[265px]">
        <span class="flex flex-col p-4 pt-24 items-center max-w-5xl">
          <h1 class="font-bold text-6xl">Tracer's Gun</h1>
          <h1 class="font-bold text-6xl pb-6">Lunar Year Skin</h1>
          <p class="max-w-lg self-center">
            Youtube Tutorial turned into my own texturing project
          </p>
        </span>
        <span class="flex p-4 md:p-20 items-center max-w-5xl">
          <div class="flex flex-col md:grid md:grid-cols-3 gap-4 pb-3">
            <Image
              class="col-span-1"
              src={tracerGun}
              alt={"Hand-painted textures in substance painter"}
            />
            <Image
              class="col-span-1"
              src={tracerGunWire}
              alt={"Wireframe view"}
            />
            <Image
              class="col-span-1"
              src={tracerGunOcc}
              alt={"Occlusion view"}
            />
          </div>
        </span>
      </div>
      <!-- Monster -->
      <div class="w-screen max-w-5xl min-w-[265px] bg-jade-600">
        <span class="flex flex-col p-4 pt-24 items-center max-w-5xl">
          <h1 class="font-bold text-6xl pb-6">Pumpkin Monster</h1>
          <p class="max-w-lg self-center">
            Monster made for a halloween walk-around game made in unreal engine
          </p>
          <p class="max-w-lg self-center">
            This one is fully rigged and did an idle animation in this demo game
          </p>
        </span>
        <span class="flex p-4 md:p-20 items-center max-w-5xl">
          <div class="flex flex-col md:flex-row gap-4 pb-3">
            <div>
              <Image
                class="col-span-1"
                src={monsterSketch}
                alt={"Initial sketch of the pumpkin monster"}
              />
            </div>
            <div>
              <Image
                class="col-span-1"
                src={monsterRender}
                alt={"Modeled, sculpted in blender, textured in substance painter"}
              />
            </div>
          </div>
        </span>
      </div>
      <!-- Personal -->
      <div class="w-screen max-w-5xl min-w-[265px] bg-neutral-800 md:mb-24">
        <span class="flex flex-col p-4 pt-24 items-center max-w-5xl">
          <h1 class="font-bold text-6xl pb-6">Personal Projects</h1>
          <p class="max-w-lg self-center">Projects just for fun ^^</p>
        </span>
        <span class="flex p-4 md:p-20 items-center max-w-5xl">
          <div class="flex flex-col md:flex-row gap-4 pb-3">
            <div>
              <Image
                class="col-span-1"
                src={candleHolder}
                alt={"That classic still-life-look of a candle holder"}
              />
            </div>
            <div>
              <Image class="col-span-1" src={highChair} alt={"High chair"} />
            </div>
            <div>
              <Image class="col-span-1" src={oniMask} alt={"Oni mask"} />
            </div>
          </div>
        </span>
      </div>
      <Footer />
    </main>
  </ArtPage>
</div>
